@{
    ViewBag.Title = "Nestable";
}
<div class="content-heading">
   <div>Nestable
      <small>Drag &amp; drop hierarchical list with mouse and touch compatibility</small>
   </div>
</div>
<div class="container-fluid">
   <div class="js-nestable-action"><a class="btn btn-secondary btn-sm mr-1" data-action="expand-all">Expand All</a><a class="btn btn-secondary btn-sm" data-action="collapse-all">CollapseAll</a>
   </div>
